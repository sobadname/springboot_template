<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org"
	xmlns:layout="http://www.ultraq.net.nz/thymeleaf/layout"
	layout:decorate="layouts">
<head>
<title>用户列表</title>
</head>
<body>
	<div layout:fragment="page-heading">
		<div class="col-lg-8">
			<h2>用户列表</h2>
			<ol class="breadcrumb">
				<li><a href="/index">立</a></li>
				<li>用户管理</li>
				<li class="active"><strong>用户列表</strong></li>
			</ol>
		</div>
	</div>
	<div layout:fragment="page-content">
		<div class="row">
			<div class="col-lg-12">
				<div class="ibox float-e-margins">
					<div class="ibox-title">
						<h5>点击标题进行排序，点击每行展开显示更多内容</h5>
						<div class="ibox-tools">
							<a class="collapse-link"> <i class="fa fa-chevron-up"></i>
							</a> <a class="close-link"> <i class="fa fa-times"></i>
							</a>
						</div>
					</div>
					<div class="ibox-content">
						<input type="text" class="form-control input-sm m-b-xs"
							id="filter" placeholder="搜索">
						<table class="footable table table-stripped toggle-arrow-tiny"
							data-page-size="8" data-filter=#filter>
							<thead>
								<tr>
									<th>姓名</th>
									<th>邮箱</th>
									<th data-hide="all">ID</th>
									<th data-hide="all">登录账号</th>
									<th data-hide="all">角色</th>
									<th data-hide="all">创建时间</th>
									<th data-hide="all">最近登录时间</th>
									<th>状态</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
								<tr th:each="user,st : ${users}">
									<td th:text="${user.name}">Liaoyongjun</td>
									<td th:text="${user.email}">sobadname@gmail.com</td>
									<td th:text="${user.id}">1</td>
									<td th:text="${user.loginName}">admin</td>
									<td>
									<span th:each="role : ${user.roleList}" class="label label-plain" th:text="${role.name}">管理员</span>
									</td>
									<td th:text="${user.createTime}">2016-01-01 03:23:45</td>
									<td th:text="${user.lastLoginTime}">2016-01-01 03:23:45</td>
									<td>
									<span th:class="${user.status} == 1 ? 'label label-primary':'label label-danger'" th:text="${user.status} == 1 ? '正常':'已禁用'" class="label label-primary">正常</span>
									</td>
									<td class="text-left">
                                        <div class="btn-group">
                                            <button class="btn btn-default btn-xs" type="button" th:onclick="'updateUser(\''+${user.loginName}+'\')'"><i class="fa fa-pencil">修改</i> </button>
                                            <button class="btn btn-default btn-xs" type="button" th:onclick="${user.status} == 1 ? 'disableUser('+'\''+${user.loginName}+'\''+')':'enableUser('+'\''+${user.loginName}+'\''+')'"><i th:text="${user.status} == 1 ? '禁用':'启用'" th:class="${user.status} == 1 ? 'fa fa-lock':'fa fa-unlock'" class="fa fa-unlock">禁用</i></button>
                                        </div>
                                    </td>
								</tr>
							</tbody>
							<tfoot>
								<tr>
									<td colspan="6">
										<ul class="pagination pull-right"></ul>
									</td>
								</tr>
							</tfoot>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Page-Level Scripts -->
	<script layout:fragment="page-script">
        $(document).ready(function() {
            $('.footable').footable();
        });
        function swalUser(username,hrefurl,txt){
        	swal({
                title: "你确定吗?",
                text: txt,
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "是的，我确定!",
                cancelButtonText: "不，我再想想!",
                closeOnConfirm: true,
                closeOnCancel: true },
            function (isConfirm) {
                if (isConfirm) {
                    location.href=hrefurl;
                }
            });
        }
        function disableUser (username) {
        	swalUser(username,"disable/"+username,"你的操作将禁止该用户使用系统!");
        }
        function enableUser (username) {
        	swalUser(username,"enable/"+username,"你的操作将允许该用户重新使用系统!");
        }
        function updateUser (username){
        	location.href="update/"+username;
        }
    </script>
</body>
</html>
